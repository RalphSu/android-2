<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/play_music_top"
    android:layout_width="fill_parent"
    android:layout_height="60dip"
    android:background="@drawable/topbar_bg" >

    <ImageButton
        android:id="@+id/playback_mode"
        android:layout_width="55dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/playback_playmode_random_button" />

    <ImageButton
        android:id="@+id/play_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="11dip"
        android:layout_marginTop="14dip"
        android:background="@drawable/back" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/play_music_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="显示歌名"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/playback_artist_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/playback_music_name"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="显示歌手"
            android:textColor="#ffbdbfe2"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>